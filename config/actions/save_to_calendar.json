    "url": "https://httpbin.org/post",
    "response_to_llm": true,
    "parameters": {
        "type": "object",
        "properties": {
            "title": {
                "type": "string",
                "description": "Event title"
            },
            "date": {
                "type": "string",
                "description": "Event date (YYYY-MM-DD)"
            },
            "time": {
                "type": "string",
                "description": "Event time (HH:MM)"
            },
            "description": {
                "type": "string",
                "description": "Event description"
            }
        },
        "required": [
            "title",
            "date"
        ]
    }
}
